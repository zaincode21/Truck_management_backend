// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Truck {
  id            Int       @id @default(autoincrement())
  license_plate String    @unique
  model         String
  year          Int
  status        String    @default("active") // active, in-work, maintenance, inactive
  last_service  DateTime?
  created_by    Int?      // Employee ID who created this record
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  deliveries    Delivery[]
  expenses      Expense[]
  fines         Fine[]
  employees     Employee[]
  otherExpenses OtherExpense[]
  creator       Employee? @relation("TruckCreator", fields: [created_by], references: [id])

  @@map("trucks")
}

enum EmployeeRole {
  driver
  turnboy
  admin
  views
}

model Employee {
  id             Int          @id @default(autoincrement())
  name           String
  email          String       @unique
  phone          String
  license_number String       @unique
  hire_date      DateTime
  status         String       @default("active") // active, in-work, inactive
  role           EmployeeRole @default(driver)
  salary         Float        @default(0)
  password       String? // Hashed password (optional for backward compatibility)
  truck_id       Int?
  created_by     Int?      // Employee ID who created this record
  created_at     DateTime     @default(now())
  updated_at     DateTime     @updatedAt

  truck           Truck?     @relation(fields: [truck_id], references: [id])
  deliveries      Delivery[] @relation("DeliveryDriver")
  deliveriesAsTurnboy Delivery[] @relation("DeliveryTurnboy")
  fines            Fine[]
  payrollRecords   PayrollRecord[]
  createdTrucks    Truck[]   @relation("TruckCreator")
  createdEmployees Employee[] @relation("EmployeeCreator")
  createdProducts  Product[]  @relation("ProductCreator")
  createdDeliveries Delivery[] @relation("DeliveryCreator")
  createdExpenses  Expense[]  @relation("ExpenseCreator")
  createdFines     Fine[]     @relation("FineCreator")
  creator          Employee?  @relation("EmployeeCreator", fields: [created_by], references: [id])

  @@map("employees")
}

model Product {
  id             Int      @id @default(autoincrement())
  name           String
  category       String?
  unit_price     Float?
  stock_quantity Int?
  description    String?
  created_by     Int?      // Employee ID who created this record
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  deliveries Delivery[]
  creator    Employee? @relation("ProductCreator", fields: [created_by], references: [id])

  @@map("products")
}

model Delivery {
  id            Int      @id @default(autoincrement())
  delivery_code String   @unique
  product_id    Int
  car_id        Int
  employee_id   Int      // Driver
  turnboy_id    Int?     // Turnboy (optional)
  origin        String
  destination   String
  delivery_date DateTime
  status        String   @default("pending") // pending, delivered
  cost          Float
  fuel_cost     Float
  mileage_cost  Float    @default(0) // Money given to employee for the delivery
  tax           Float    @default(0) // Tax amount in RFW (not percentage)
  price         Float
  total_income  Float
  notes         String?
  created_by    Int?      // Employee ID who created this record
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  product  Product   @relation(fields: [product_id], references: [id])
  truck    Truck     @relation(fields: [car_id], references: [id])
  employee Employee  @relation("DeliveryDriver", fields: [employee_id], references: [id])
  turnboy  Employee? @relation("DeliveryTurnboy", fields: [turnboy_id], references: [id])
  creator  Employee? @relation("DeliveryCreator", fields: [created_by], references: [id])
  expenses      Expense[]
  fines         Fine[]
  otherExpenses OtherExpense[]

  @@map("deliveries")
}

model Expense {
  id           Int      @id @default(autoincrement())
  car_id       Int
  delivery_id  Int? // Optional - link to specific delivery
  expense_type String // fuel, maintenance, repair, insurance, etc.
  amount       Float
  expense_date DateTime
  description  String?
  created_by   Int?      // Employee ID who created this record
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  truck         Truck         @relation(fields: [car_id], references: [id])
  delivery      Delivery?     @relation(fields: [delivery_id], references: [id])
  otherExpense  OtherExpense?
  creator       Employee?     @relation("ExpenseCreator", fields: [created_by], references: [id])

  @@map("expenses")
}

enum PayStatus {
  paid
  unpaid
}

model Fine {
  id               Int       @id @default(autoincrement())
  car_id           Int
  employee_id      Int
  delivery_id      Int? // Optional - link to specific delivery
  fine_type        String // Rwanda National Police fine types
  fine_date        DateTime // timestamp
  fine_cost        Float
  pay_status       PayStatus @default(unpaid) // Payment status: paid or unpaid
  paid_amount      Float     @default(0) // Amount paid so far (for partial payments)
  remaining_amount Float?    // Remaining amount to be paid (fine_cost - paid_amount)
  description      String?
  payroll_period_id Int? // Link to payroll period (which month this fine belongs to)
  created_by       Int?      // Employee ID who created this record
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt

  truck         Truck          @relation(fields: [car_id], references: [id])
  employee      Employee       @relation(fields: [employee_id], references: [id])
  delivery      Delivery?      @relation(fields: [delivery_id], references: [id])
  payrollPeriod PayrollPeriod? @relation(fields: [payroll_period_id], references: [id])
  creator       Employee?      @relation("FineCreator", fields: [created_by], references: [id])
  payments      Payment[]

  @@map("fines")
}

model OtherExpense {
  id           Int      @id @default(autoincrement())
  car_id       Int
  delivery_id  Int? // Optional - link to specific delivery
  expense_id   Int      @unique // Link to the original expense
  amount       Float
  expense_date DateTime
  description  String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  truck    Truck     @relation(fields: [car_id], references: [id])
  delivery Delivery? @relation(fields: [delivery_id], references: [id])
  expense  Expense   @relation(fields: [expense_id], references: [id], onDelete: Cascade)

  @@map("other_expenses")
}

// Payroll Period: Represents a month/year for payroll processing
model PayrollPeriod {
  id          Int      @id @default(autoincrement())
  year        Int      // e.g., 2025
  month       Int      // 1-12
  period_name String   // e.g., "January 2025"
  start_date  DateTime // First day of the month
  end_date    DateTime // Last day of the month
  status      String   @default("open") // open, closed, processed
  processed_at DateTime? // When month-end was processed
  processed_by Int? // User/Admin who processed it
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  payrollRecords PayrollRecord[]
  fines          Fine[]
  payments       Payment[]

  @@unique([year, month])
  @@map("payroll_periods")
}

// Payroll Record: Individual employee payroll for a specific period
model PayrollRecord {
  id               Int      @id @default(autoincrement())
  payroll_period_id Int
  employee_id      Int
  original_salary  Float    // Original salary before fines
  total_fines      Float    @default(0) // Total fines for this period
  net_salary       Float    // Net salary to be paid (original - fines)
  status           String   @default("pending") // pending, paid, processed
  paid_at          DateTime?
  notes            String?
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  payrollPeriod PayrollPeriod @relation(fields: [payroll_period_id], references: [id])
  employee      Employee      @relation(fields: [employee_id], references: [id])

  @@unique([payroll_period_id, employee_id])
  @@map("payroll_records")
}

enum UserRole {
  admin
  views
}

model User {
  id             Int       @id @default(autoincrement())
  name           String
  email          String    @unique
  password       String    // Hashed password
  role           UserRole  @default(views)
  status         String    @default("active") // active, inactive
  created_by     Int?      // User ID who created this user
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt

  creator        User?     @relation("UserCreator", fields: [created_by], references: [id])
  createdUsers   User[]    @relation("UserCreator")

  @@map("users")
}

// Payment: Tracks individual payments made towards a fine
model Payment {
  id               Int      @id @default(autoincrement())
  fine_id          Int      // Link to the fine being paid
  amount           Float    // Amount paid in this transaction
  payment_date     DateTime @default(now()) // When the payment was made
  payroll_period_id Int?    // Link to payroll period (which month this payment belongs to)
  notes            String?  // Optional notes about the payment
  created_by       Int?     // Employee/User ID who recorded this payment
  created_at       DateTime @default(now())
  updated_at       DateTime @updatedAt

  fine            Fine            @relation(fields: [fine_id], references: [id], onDelete: Cascade)
  payrollPeriod   PayrollPeriod?  @relation(fields: [payroll_period_id], references: [id])

  @@map("payments")
}

// Settings: Application and company settings
model Settings {
  id                Int      @id @default(autoincrement())
  setting_type      String   // 'app' or 'company'
  currency          String?  // RFW, USD, EUR, GBP
  date_format       String?  // YYYY-MM-DD, MM/DD/YYYY, etc.
  language          String?  // en, rw, fr
  theme             String?  // system, light, dark
  items_per_page    String?  // 10, 25, 50, 100
  company_name      String?
  company_email     String?
  company_phone     String?
  company_address   String?
  company_city      String?
  company_website   String?
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  @@unique([setting_type])
  @@map("settings")
}
