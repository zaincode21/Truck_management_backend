{
  "name": "truck-management-server",
  "version": "1.0.0",
  "description": "Backend API for TruckFlow Management System",
  "main": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:render": "prisma generate && npm run build",
    "postinstall": "prisma generate",
    "render:build": "npm install && npm run build && npm run prisma:migrate:deploy",
    "start": "node dist/index.js",
    "test:api": "./test-api.sh",
    "health": "curl -f http://localhost:5000/health || echo 'Server is not running on port 5000'",
    "docs": "echo 'API Documentation available at http://localhost:5000/api-docs when server is running'",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm audit && npm run security:audit"
  },
  "keywords": [
    "truck",
    "management",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "@types/pdfkit": "^0.17.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "pdfkit": "^0.17.2",
    "puppeteer": "^24.30.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "validator": "^13.15.22",
    "xss": "^1.0.14",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/hpp": "^0.2.7",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.10",
    "prisma": "^5.22.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "overrides": {
    "js-yaml": "^4.1.0"
  }
}
